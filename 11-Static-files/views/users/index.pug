extends ../layouts/common

block content
    h1 Users
    a(href="/users/create") New

    form(action="/users/search" method="GET")
        input(type="text", name="q", value=inputSearch, class="form-control")
        button(class="btn btn-success") Search
    ul
        each user in users
            li
                span= user.name
                span &nbsp:
                a(href='/users/' + user.id ) View
block footer

