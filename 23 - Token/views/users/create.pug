extends ../layouts/common

block content
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error


    form(action="/users/create", method="POST" enctype="multipart/form-data")
        input(type="hidden", name="_csrf", value=csrfToken)
        .form-group   
            label(for="name") Name
            input.form-control#name(type="text",name="name", class="form-control" value= values ? values.name : '')
        .form-group   
            label(for="phone") Phone
            input.form-control#phone(type="text",name="phone", class="form-control" value= values ? values.phone : '')
        .form-group   
            label(for="email") Email
            input.form-control#email(type="email",name="email", class="form-control" value= values ? values.email : '')
        .form-group   
            label(for="password") Password
            input.form-control#password(type="password",name="password", class="form-control" value= values ? values.password : '')
        .form-group   
            label(for="avatar") Avatar
            input.form-control-file#avatar(type="file",name="avatar", class="form-control")
        button(class="btn btn-primary") Create