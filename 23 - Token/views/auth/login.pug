extends ../layouts/common

block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error


    form(method="POST")
        .form-group   
            label(for="email") Email
            input.form-control#email(type="text",name="email", class="form-control" value= values ? values.name : '')
        .form-group   
            label(for="password") Password
            input.form-control#password(type="password",name="password", class="form-control" value= values ? values.phone : '')
        button(class="btn btn-primary") Login